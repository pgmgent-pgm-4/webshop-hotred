{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build:all": "npm run clean:build && npm run build:server && npm run copy:all",
    "build:server": "cross-env NODE_ENV=production babel src -d build",
    "clean:build": "rimraf build/",
    "copy:all": "npm run copy:data && npm run copy:views && npm run copy:package",
    "copy:data": "copyfiles -u 2 src/data/* build/data",
    "copy:package": "copyfiles package-build.json build && move-file build/package-build.json build/package.json",
    "copy:views": "copyfiles -u 2 src/views/* build/views",
    "lint": "cross-env NODE_ENV=lint eslint . --ext .js --fix",
    "serve:build": "cross-env NODE_ENV=production HOSTNAME=localhost PORT=8081 node build/app.js",
    "serve:dev": "cross-env NODE_ENV=development HOSTNAME=localhost PORT=8080 nodemon --exec babel-node -e js,html,nj app.js --watch *"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.0",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.14.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-recommended": "^4.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^3.0.0",
    "move-file-cli": "^2.0.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.7.2",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "http": "0.0.1-security",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "nunjucks": "^3.2.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "sequelize": "^6.6.2",
    "sqlite3": "^5.0.2",
    "swagger-jsdoc": "6.1.0",
    "swagger-ui-express": "^4.1.6"
  }
}
